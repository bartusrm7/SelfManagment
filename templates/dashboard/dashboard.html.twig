{% extends 'base.html.twig' %} {% block title %}Self-Management - Dashboard {%
endblock %} {% block loggedAs %}
<div class="card p-3 mb-4">
    {% if app.user %}
    <h4>
        Hello! You are logged in as
        <span class="fw-bold">{{ app.user.userIdentifier | capitalize }}</span>
    </h4>
    {% endif %}
</div>
{% endblock %} {% block breadcrumbActive %}Dashboard {% endblock %} {% block
body %}
<div class="row g-4 mb-4">
    <div class="col-md-6">
        <div class="card text-white bg-info h-100">
            <div
                class="card-body pb-0 d-flex justify-content-between align-items-start"
            >
                <div>
                    <div class="fs-4 fw-semibold">Last 7 days daily tasks</div>
                </div>
                <div class="dropdown">
                    <button
                        class="btn btn-transparent text-white p-0"
                        type="button"
                        data-coreui-toggle="dropdown"
                        aria-haspopup="true"
                        aria-expanded="false"
                    ></button>
                </div>
            </div>
            <div class="c-chart-wrapper mt-3 mx-3">
                <canvas
                    class="chart"
                    id="card-chart1"
                    style="
                        display: block;
                        box-sizing: border-box;
                        height: 100%;
                        width: 100%;
                    "
                ></canvas>
                <div
                    class="chartjs-tooltip"
                    style="opacity: 0; left: 154.333px; top: 129.847px"
                >
                    <table style="margin: 0px">
                        <thead class="chartjs-tooltip-header">
                            <tr
                                class="chartjs-tooltip-header-item"
                                style="border-width: 0px"
                            >
                                <th style="border-width: 0px">June</th>
                            </tr>
                        </thead>
                        <tbody class="chartjs-tooltip-body">
                            <tr class="chartjs-tooltip-body-item">
                                <td style="border-width: 0px">
                                    <span
                                        style="
                                            background: rgb(94, 92, 208);
                                            border-color: rgba(
                                                255,
                                                255,
                                                255,
                                                0.55
                                            );
                                            border-width: 2px;
                                            margin-right: 10px;
                                            height: 10px;
                                            width: 10px;
                                            display: inline-block;
                                        "
                                    ></span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="fs-4 fw-semibold">Today's tasks</div>
                    {% if percentage == 100 %}
                    <div class="fs-4 fw-semibold">All tasks done</div>
                    {% endif %}
                </div>
                <div class="progress mt-2">
                    <div
                        id="progressBarTasks"
                        class="progress-bar"
                        role="progressbar"
                        style="width: {{ percentage }}%"
                        aria-valuenow="25"
                        aria-valuemin="0"
                        aria-valuemax="100"
                    ></div>
                </div>
                <div>
                    {% if tasks|length > 0 %} {% for task in tasks %}
                    <div>
                        <div class="m-2">
                            {{ loop.index }}
                            -
                            {{ task.taskName }}
                        </div>
                    </div>
                    {% endfor %} {% else %}
                    <div>No tasks data available</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row g-4 mb-4">
  <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body rounded-3 bg-success text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="fs-4 fw-semibold">Total expenses this month</div>
                </div>
                <div style="min-height: 70px;">
                    {% if totalExpenses|length > 0 %} {% for expenses in totalExpenses %}
                    <div>
                        <div>
                           Expenses: <span class="fs-5 fw-bold">{{ expenses }}$</span>
                        </div>
                    </div>
                    {% endfor %} {% else %}
                    <div>No expenses this month</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body rounded-3 bg-danger">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="fs-4 fw-semibold">Today's meetings</div>
                </div>
                <div style="min-height: 70px;">
                    {% if meetings|length > 0 %} {% for meeting in meetings %}
                    <div>
                        <div class="m-2">
                            {{ loop.index }}
                            -
                            {{ meeting.name }}
                        </div>
                    </div>
                    {% endfor %} {% else %}
                    <div>No meetings data available</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const labels = {{ labels|json_encode|raw }}
    const values = {{ values|json_encode|raw }}

    function dailyTasks7DaysChart() {
        new Chart(document.getElementById('card-chart1'), {
            type: "line",
            data: {
                labels: labels,
                datasets: [
                    {
                        label: "",
                        data: values,
                        borderColor: "rgba(255, 255, 0, 0.75)", 
                        backgroundColor: "rgba(225, 225, 0, 0.5)",
                        color: "black", 
                        borderWidth: 3, 
                        tension: 0.4, 
                        fill: true,
                        scales: { 
                            x: { display: true }, 
                            y: { display: true } 
                        }
                    },
                    
                ],
            },
            options: { 
                scales: { 
                    x: { ticks: { color: "#fff" } }, 
                    y: { ticks: { color: "#fff", stepSize: 1 } } } 
                }        
            });
    }
    dailyTasks7DaysChart();
</script>
{% endblock %}
