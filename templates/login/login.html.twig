{% extends 'login_forms.html.twig' %}

{% block title %}Self-Management - Sign In
{% endblock %}

{% block body %}

	<div class="min-vh-100 bg-dark d-flex justify-content-center align-items-center">
		<div class="container">
			<div class="bg-light col-md-8 col-lg-6 m-auto p-3 p-sm-4 p-lg-5 rounded-3" style="max-width: 600px;">
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					<h1 class="h3 mb-4 font-weight-normal">Please sign in</h1>
					<label for="username">Email</label>
					<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
					<label for="password">Password</label>
					<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
					<input
					type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

					{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.See https://symfony.com/doc/current/security/remember_me.html #}

					<button class="btn btn-lg btn-primary w-100 mt-3" type="submit">Sign in</button>
				</form>
				<div class="mt-5">
					<div class="text-center mb-1">If you have not an account</div>
					<a href="{{ path('app_register') }}" class="btn btn-lg btn-primary w-100">
						Registration
					</a>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
